<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bankex_background"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/import_or_export_logo_top_margin"
        android:contentDescription="@null"
        app:layout_collapseMode="parallax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bankex_pay"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/import_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large_xx"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_large_x"
        android:background="@drawable/button_white"
        android:text="@string/import_wallet"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/create_button"
        />
    <!-- style="@style/ButtonOutlinePrimary"-->

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/create_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large_xx"
        android:layout_marginEnd="@dimen/margin_large_x"
        android:layout_marginStart="@dimen/margin_small"
        android:text="@string/create_wallet"
        android:background="@drawable/button_accent"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/import_button"
        app:layout_constraintRight_toRightOf="parent"
        />
    <!-- style="@style/ButtonAccent" -->
</android.support.constraint.ConstraintLayout>
