<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="240dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/x35" />

    <TextView
        android:id="@+id/titleOnboarding"
        android:text="@string/favorite_list"
        android:layout_marginTop="54dp"
        style="@style/onboarding_title_style" />

    <TextView
        android:id="@+id/descOnboarding"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="51dp"
        android:text="@string/add_your_contacts"
        style="@style/onboarding_desc_style" />
</LinearLayout>