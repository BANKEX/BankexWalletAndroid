<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="searchViewStyle">@style/WallSearchStyle</item>

        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <!-- Search view styles. -->
    <style name="WallSearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/search_view_activated</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- ToolBar styles. -->
    <style name="Toolbar" parent="AppTheme">
        <item name="background">@color/bankex_background</item>
        <item name="android:textColorPrimary">@color/bankex_black</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolBarWhite" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>





    <style name="AppTheme.Toolbar.White" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black_almost</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>







    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- ViewPager styles. -->
    <style name="ViewPagerToolbar" parent="AppTheme">
        <item name="tabBackground">@color/bankex_background</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/toolbar_text_color</item>
    </style>

    <!-- Buttons styles. -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_primary_selector</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonOutlinePrimaryWithWhite" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_primary_outline_selector</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/bankex_black</item>
    </style>

    <style name="ButtonOutlinePrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_primary_outline_transparent_background_selector</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonAppCompat" parent="Widget.AppCompat.Button.Colored">
    </style>

    <!-- Pin code style -->
    <style name="SetPinEditStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/bankex_black</item>
    </style>
</resources>
