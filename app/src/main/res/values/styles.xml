<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/bankex_black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:background">@color/bankex_background</item>
        <item name="android:textColorPrimary">@color/bankex_black</item>
    </style>

    <style name="ViewPagerToolbar" parent="AppTheme">
        <item name="tabBackground">@color/bankex_background</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/bankex_grey</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/bankex_white</item>
    </style>

    <style name="ButtonOutlinePrimaryWithWhite" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_primary_outline_selector</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/bankex_black</item>
    </style>

    <style name="ButtonOutlinePrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">
            @drawable/button_primary_outline_transparent_background_selector
        </item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonAppCompat" parent="Widget.AppCompat.Button.Colored">
    </style>

    <style name="PasteStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_paste_contact</item>
        <item name="android:drawablePadding">@dimen/button_paste_padding</item>
        <item name="android:paddingLeft">@dimen/button_paste_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/PasteContact</item>
    </style>

    <style name="SendDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_send_height</item>
        <item name="android:textAppearance">@style/SendDetailText</item>
        <item name="android:background">@color/bankex_white</item>
    </style>

    <style name="ReceiveDetail" parent="SendDetail">
        <item name="android:textAppearance">@style/RecieveDetailText</item>
    </style>

</resources>