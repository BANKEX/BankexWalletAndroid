<resources>

    //Базовые стили

    <style name="BaseTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/bankex_black</item>
    </style>

    <style name="DisplayBold" parent="BaseTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textAppearance">@style/DisplayBold</item>
    </style>

    <style name="TitleRegular" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textAppearance">@style/TitleRegular</item>
    </style>

    <style name="TitleBold" parent="TitleRegular">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheaderRegular" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textAppearance">@style/SubheaderRegular</item>
    </style>

    <style name="SubheaderBold" parent="SubheaderRegular">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheaderMedium" parent="BaseTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textAppearance">@style/SubheaderMedium</item>
    </style>

    <style name="CaptionBold" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textAppearance">@style/CaptionBold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/caption</item>
    </style>

    <style name="CaptionRegular" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textAppearance">@style/CaptionRegular</item>
        <item name="android:textColor">@color/caption</item>
    </style>

    <style name="BodyMedium" parent="BaseTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textAppearance">@style/BodyMedium</item>
        <item name="android:textColor">@color/caption</item>
    </style>

    //Кастомщина к различным сценариям

    <style name="FirstScreenText" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_big_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/FirstScreenText</item>
    </style>

    <style name="OnboardingTitle" parent="TitleRegular">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textAppearance">@style/OnboardingTitle</item>
    </style>

    <style name="SubheaderRegular.PlaceHolder">
        <item name="android:textColor">@color/placeholder_body_text</item>
    </style>

    <style name="SubheaderMedium.Link">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubheaderBold.Link">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubheaderRegular.Grey">
        <item name="android:textColor">@color/bankex_grey</item>
    </style>

    <style name="SubheaderBold.Grey" parent="SubheaderBold">
        <item name="android:textColor">@color/caption</item>
    </style>


    <style name="CaptionBold.Link">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BodyMedium.Link">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PasteContact">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/contact_paste</item>
    </style>


    <style name="General">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/contact_common</item>
    </style>

    <style name="RetrieveDataSmall" parent="General">

    </style>

    <style name="WalletDetailsGeneral">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/bankex_white</item>
    </style>

    <style name="SendDetailText" parent="General">
        <item name="android:textColor">@color/send_button_color</item>
    </style>

    <style name="RecieveDetailText" parent="General">
        <item name="android:textColor">@color/recieve_button_color</item>
    </style>


    <style name="RetrieveDataBig">
        <item name="android:textSize">@dimen/text_size_big_display</item>
        <item name="android:textColor">@color/splash_title_color</item>
    </style>

    <style name="SetPinTitle">
        <item name="android:textSize">@dimen/text_size_title_small</item>
        <item name="android:textColor">@color/bankex_black</item>
    </style>

    <style name="WalletDetailsScreen" parent="WalletDetailsGeneral">

    </style>

    <style name="Balance" parent="WalletDetailsGeneral">
        <item name="android:textSize">@dimen/text_size_big_display_lite</item>
    </style>

    <style name="BalanceDesc" parent="WalletDetailsGeneral">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

</resources>
